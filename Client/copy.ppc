    gameScene->setSceneRect(0,0,1400,950);
    piece_to_placed = NULL; // fuck you you asshole

    //Making the view
    setFixedSize(1400,950);
    setHorizontalScrollBarPolicy(Qt::ScrollBarAlwaysOff);
    setVerticalScrollBarPolicy(Qt::ScrollBarAlwaysOff);
