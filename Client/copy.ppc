    SetGamecolor();

}

void game::placeTheBoard()
{
    board = new gameboard();
    board->placeBoxes();
}


void game::addToScene(QGraphicsItem *item)
{
    gameScene->addItem(item);
}

void game::start() // playagain use this
{
    AIsSide = -1;
    gameScene->clear();
    playOffline();
    addToScene(turnDisplay);
    addToScene(check);
    placeTheBoard();
    placePieces();
}

